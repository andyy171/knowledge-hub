{{- $pages := .Site.RegularPages -}}
{{- $data := slice -}}
{{- range $pages -}}
  {{- $item := dict 
    "title" .Title 
    "permalink" .Permalink 
    "content" (.Plain | truncate 500) 
    "tags" .Params.tags 
    "categories" .Params.categories 
    "date" .Date.Format "2006-01-02"
  -}}
  {{- $data = $data | append $item -}}
{{- end -}}
{{- $data | jsonify -}}